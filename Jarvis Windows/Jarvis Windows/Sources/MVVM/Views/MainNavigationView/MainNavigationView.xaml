    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="490"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="55"/>
        </Grid.ColumnDefinitions>
        
        <!--Main Content-->
        <!--<UserControl Grid.Column="0"> 
            <ContentControl x:Name="PageContent"
