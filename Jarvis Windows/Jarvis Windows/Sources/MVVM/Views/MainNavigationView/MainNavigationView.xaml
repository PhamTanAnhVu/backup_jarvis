                                    <TextBlock Text="Art" 
                                               Margin="0 5 0 0"
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center" 
                                               FontSize="10" Foreground="{StaticResource SolidColorBrushSlate500}"
                                               FontFamily="Inter"
                                               FontWeight="SemiBold"/>
                                </StackPanel>

                                <Border Grid.Column="1" CornerRadius="2 0 0 2" Height="36">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0 0" EndPoint="1 0">
                                            <GradientStop Color="#0078D4" Offset="1"/>
                                            <GradientStop Color="#9692FF" Offset="0"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>
                            </Grid>
                        </Button.Content>
                    </Button>
                </StackPanel>
    
                <!--Option Items-->
                <StackPanel Orientation="Vertical" Width="auto" Height="auto">
                    <!--Item More Info-->
                    <Button x:Name="btnNavigateMoreInfo" Width="32" Height="32" Margin="0 10"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="{Binding ElementName=btnNavigateMoreInfo}"
                            Style="{StaticResource NavigateButton}">

                    </Button>

                    <!--Item Settings-->
                    <Button x:Name="btnNavigateSettings" Width="32" Height="32"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="{Binding ElementName=btnNavigateSettings}"
                            Style="{StaticResource NavigateButton}">
 
                    </Button>

                    <!--Item Profile-->
                    <Button x:Name="btnNavigateProfile" Width="40" Height="40" Margin="0 25"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="{Binding ElementName=btnNavigateProfile}"
                            Background="Transparent" BorderBrush="Transparent" BorderThickness="0">
                        <Button.Content>
                            <Border CornerRadius="18" Width="36" Height="36">
                                <Border.Background>
                                    <ImageBrush Stretch="Fill" ImageSource="/Assets/Images/default-avatar.png"/>
                                </Border.Background>
                            </Border>
                        </Button.Content>
                    </Button>
                </StackPanel>
            </StackPanel>
