<Window x:Class="Jarvis_Windows.Sources.MVVM.Views.MainNavigationView.MainNavigationView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Jarvis_Windows.Sources.MVVM.Views.MainNavigationView"
        xmlns:viewModel="clr-namespace:Jarvis_Windows.Sources.MVVM.ViewModels"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:chatAI="clr-namespace:Jarvis_Windows.Sources.MVVM.Views.AIChatSidebarView"
        mc:Ignorable="d"
        Title="MainNavigationView" 
        Height="750" Width="550"
        WindowStyle="None"
        Background="Transparent"
        Topmost="True"
        WindowStartupLocation="Manual"
        ResizeMode="NoResize"
        AllowsTransparency="True">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Jarvis Windows;component/Sources/MVVM/Views/Styles/JarvisStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Window.DataContext>
        <local:MainNavigationViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="490"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="55"/>
        </Grid.ColumnDefinitions>
        
        <!--Main Content-->
        <UserControl Grid.Column="0"> 
            <!--<chatAI:AIChatSidebarView/>-->
            <ContentControl x:Name="PageContent"
                                Content="{Binding CurrentViewModel}" />
        </UserControl>
        
        <!--Navigation Bar-->
        <Border Grid.Column="2" Background="White" CornerRadius="12">
            <StackPanel Orientation="Vertical">
                 
                <!--Top: Hide and Expand Button-->
                <StackPanel Orientation="Horizontal" Width="auto" Height="44" HorizontalAlignment="Center">
                    <Button Width="20" Height="20" Margin="0 0 8 0">
                        <Button.Content>
                            <Path Fill="#334155" Data="M4.146 3.646a.5.5 0 0 0 0 .708L7.793 8l-3.647 3.646a.5.5 0 0 0 .708.708l4-4a.5.5 0 0 0 0-.708l-4-4a.5.5 0 0 0-.708 0M11.5 1a.5.5 0 0 1 .5.5v13a.5.5 0 0 1-1 0v-13a.5.5 0 0 1 .5-.5"/>
                        </Button.Content>
                    </Button>

                    <Button Width="20" Height="20">
                        <Button.Content>
                            <Path Fill="#334155" Data="M3.646 10.146a.5.5 0 0 1 .708 0L8 13.793l3.646-3.647a.5.5 0 0 1 .708.708l-4 4a.5.5 0 0 1-.708 0l-4-4a.5.5 0 0 1 0-.708m0-4.292a.5.5 0 0 0 .708 0L8 2.207l3.646 3.647a.5.5 0 0 0 .708-.708l-4-4a.5.5 0 0 0-.708 0l-4 4a.5.5 0 0 0 0 .708M1 8a.5.5 0 0 1 .5-.5h13a.5.5 0 0 1 0 1h-13A.5.5 0 0 1 1 8"/>
                        </Button.Content>
                        <Button.RenderTransform>
                            <RotateTransform CenterX="10" CenterY="10" Angle="90" />
                        </Button.RenderTransform>
                    </Button>
                </StackPanel>
                
                <!--Navigation Items-->
                <StackPanel Orientation="Vertical" Width="auto" Height="500">
                    <!--Item Chat-->
                    <Button x:Name="btnNavigateChat" Width="auto" Height="54"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="{Binding ElementName=btnNavigateChat}">
                        
                    </Button>
                    
                    <!--Item Read-->
                    <Button Name="btnNavigateRead" Width="auto" Height="54" Margin="0 15"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="{Binding ElementName=btnNavigateRead}">

                    </Button>
                    
                    <!--Item Search-->
                    <Button Name="btnNavigateSearch" Width="auto" Height="54"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="{Binding ElementName=btnNavigateSearch}">

                    </Button>
                    
                    <!--Item Write-->
                    <Button Name="btnNavigateWrite" Width="auto" Height="54" Margin="0 15"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="{Binding ElementName=btnNavigateWrite}">

                    </Button>
                    
                    <!--Item Translate-->
                    <Button x:Name="btnNavigateTranslate" Width="auto" Height="54"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="{Binding ElementName=btnNavigateTranslate}">
                        
                    </Button>
                    
                    <!--Item Art-->
                    <Button x:Name="btnNavigateArt" Width="auto" Height="54" Margin="0 15"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="{Binding ElementName=btnNavigateArt}">

                    </Button>
                </StackPanel>

                <!--Option Items-->
                <StackPanel Orientation="Vertical" Width="auto" Height="auto">
                    <!--Item More Info-->
                    <Button x:Name="btnNavigateMoreInfo" Width="32" Height="32" Margin="0 10"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="{Binding ElementName=btnNavigateMoreInfo}">

                    </Button>

                    <!--Item Settings-->
                    <Button x:Name="btnNavigateSettings" Width="32" Height="32"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="{Binding ElementName=btnNavigateSettings}">
 
                    </Button>

                    <!--Item Profile-->
                    <Button x:Name="btnNavigateProfile" Width="32" Height="32" Margin="0 25"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="{Binding ElementName=btnNavigateProfile}">

                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
        
    </Grid>
</Window>
