                <ResourceDictionary Source="/Jarvis Windows;component/Sources/MVVM/Views/Styles/ScrollBarStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border BorderBrush="Transparent" BorderThickness="10" CornerRadius="{StaticResource BorderRadius2Xl}" Background="Transparent">
        <Border BorderBrush="Black" BorderThickness="0" CornerRadius="{StaticResource BorderRadius2Xl}" 
                Background="#FFF" Padding="{StaticResource Padding2}">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" Direction ="0" RenderingBias="Quality" ShadowDepth ="0" Color ="#f2f2f2"/>
            </Border.Effect>

            <ItemsControl ItemsSource="{Binding GenerativeModels}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid x:Name="ModelGrid" Margin="{Binding Margin}">
                            <Button x:Name="ModelButton" Style="{StaticResource SelectedModelButton}"
                                    Command="{Binding SelectModelCommand}" CommandParameter="{Binding Idx}">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal" style:MarginSetter.Margin="{StaticResource ColumnGap2}">
                                        <Image Source="{Binding ImageSource}"/>

                            <TextBlock x:Name="ModelName" Style="{StaticResource MdTextblock400}"
                                                   Text="{Binding Name}"/>
                        </StackPanel>
                    </Button.Content>
                </Button>

                            <Popup Placement="Center" StaysOpen="True" AllowsTransparency="True" PopupAnimation="Fade"
                                   PlacementTarget="{Binding ElementName=ModelButton}" VerticalOffset="0" HorizontalOffset="210"
                                   IsOpen="{Binding ElementName=ModelButton, Path=IsMouseOver, Mode=OneWay}">
                    <Border Style="{StaticResource UnderMessageBorder}">
                                    <TextBlock Style="{StaticResource XsTextblock400}" Foreground="White">
                                        <Run Text="{Binding PopupDescription}" />
                                        <Run Text="{Binding TokenString}" FontWeight="Bold"/>
                                    </TextBlock>
                    </Border>
                </Popup>
            </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

                            <TextBlock x:Name="ClaudeInstantModelName" Style="{StaticResource MdTextblock400}"
                                   Text="Claude-Instant"/>
                        </StackPanel>
                    </Button.Content>
                </Button>

                <Popup Placement="Right" StaysOpen="True" AllowsTransparency="True" PopupAnimation="Fade"
                       PlacementTarget="{Binding ElementName=ClaudeInstantButton}" VerticalOffset="10" HorizontalOffset="10"
