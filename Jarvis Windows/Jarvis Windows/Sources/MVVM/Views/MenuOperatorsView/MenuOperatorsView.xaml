<UserControl x:Class="Jarvis_Windows.Sources.MVVM.Views.MenuOperatorsView.MenuOperatorsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Jarvis_Windows.Sources.MVVM.Views.MenuOperatorsView"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Jarvis Windows;component/Sources/MVVM/Views/Styles/JarvisStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Border Background="#EBEBEB" CornerRadius="10" BorderBrush="White" BorderThickness="2">
        <DockPanel Background="Transparent">
            <DockPanel DockPanel.Dock="Top" LastChildFill="False" Margin="5" VerticalAlignment="Top">
                <Image DockPanel.Dock="Left" Source="../../../../Assets/Images/jarvis_logo.png" Margin="0 0 5 0" Width="20" Height="20">
                    <Image.Effect>
                        <DropShadowEffect Color="#303030" Direction="300" ShadowDepth="5" Opacity="0.5"/>
                    </Image.Effect>
                </Image>

                <TextBlock 
                    DockPanel.Dock="Left" 
                    VerticalAlignment="Center"
                    FontFamily="Iner"
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="#275CB0">
                    Jarvis
                </TextBlock>

                <TextBlock 
                    DockPanel.Dock="Left" 
                    VerticalAlignment="Center"
                    FontFamily="Iner"
                    FontSize="14"
                    Margin="5 0"
                    Opacity="0.5"
                    FontWeight="Bold"
                    Foreground="#303030">
                    Beta
                </TextBlock>

                <Button
                    DockPanel.Dock="Right"
                    x:Name="btnCloseIntroduction"
                    Width="15"
                    Height="15"
                    Padding="0"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Background="Transparent"
                    BorderThickness="0"
                    Margin="0 0 5 0"
                    Command="{Binding HideMenuOperationsCommand}"
                    Foreground="#303030">
                    <Button.Effect>
                        <DropShadowEffect Color="#303030" Direction="300" ShadowDepth="5" Opacity="0.5"/>
                    </Button.Effect>
                    <Button.Content>
                        <Image Source="../../../../Assets/Images/cross.png"/>
                    </Button.Content>
                </Button>
            </DockPanel>
            
            <WrapPanel>
                <!--<Image Source="../../../../Assets/Images/translate_img.png" Width="15" Height="15" Margin="5 0"/>-->
                <TextBlock Margin="20 0" Width="265" Background="#CCCCCC" FontWeight="Bold">Content</TextBlock>

                    <!--<ComboBox Width="180" Height="35" Margin="20 10" Background="Transparent" >
                        <ComboBoxItem IsSelected="True">
                            <WrapPanel>
                                <Button Width="30" Height="30" >
                                    <Button.Template>
                                        <ControlTemplate>
                                            <Image Height="20" Source="/Jarvis Windows;component/Assets/Images/translate_img.png"></Image>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <TextBlock Text="Traslate to English" VerticalAlignment="Center" />
                            </WrapPanel>
                        </ComboBoxItem>
                        <ComboBoxItem IsSelected="True">
                            <WrapPanel>
                                <Button Width="30" Height="30" >
                                    <Button.Template>
                                        <ControlTemplate>
                                            <Image Height="20" Source="/Jarvis Windows;component/Assets/Images/translate_img.png"></Image>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <TextBlock Text="Traslate to Vietnamese" VerticalAlignment="Center" />
                            </WrapPanel>
                        </ComboBoxItem>
                    </ComboBox>-->

                <Border Width="180" Height="30" CornerRadius="10" Background="#CCCCCC" Margin="20 10">
                    <Button Width="180" Height="30"     
                            Style="{StaticResource JarvisOperationButton}"
                            Command="{Binding TranslateCommand}">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="../../../../Assets/Images/translate_img.png" Width="20" Height="20" VerticalAlignment="Center"/>

                            <TextBlock Text="Translate to English" Margin="10,0,0,0" VerticalAlignment="Center"/>

                            <ComboBox Name="languageComboBox" ItemsSource="{Binding Languages}" DisplayMemberPath="Name" SelectionChanged="languageComboBox_SelectionChanged"  Width="25" Height="25" Margin="5 0" Background="Transparent" BorderBrush="Transparent" BorderThickness="0">
                                <!--<ComboBox.Style>    
                                    <Style TargetType="ComboBox">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ComboBox">
                                                    <Grid Background="Transparent">
                                                        <ContentPresenter/>
                                                        <Button Background="Transparent" BorderBrush="Transparent" BorderThickness="0">
                                                            <Button.Content>
                                                                <Image Source="../../../../Assets/Images/navigate_next.png" Width="16" Height="16"/>
                                                            </Button.Content>
                                                        </Button>
                                                    </Grid>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ComboBox.Style>-->
                                <!--<ComboBox.ItemTemplate>
                                    --><!-- ... Code của ItemTemplate --><!--
                                </ComboBox.ItemTemplate>-->
                            </ComboBox>
                        </StackPanel>
                    </Button>
                </Border>

                <Border Width="100" Height="30" CornerRadius="10" Background="#CCCCCC" Margin="20 0">
                    <Button Width="100" Height="30" 
                            Style="{StaticResource JarvisOperationButton}"
                            Command="{Binding ReviseCommand}">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="../../../../Assets/Images/pencil.png" Width="20" Height="20" VerticalAlignment="Center"/>

                            <TextBlock Text="Revise" Margin="5,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Border>

                <Border Width="120" Height="30" CornerRadius="10" Background="#CCCCCC">
                    <Button Width="120" Height="30"
                            Style="{StaticResource JarvisOperationButton}"
                            Command="{Binding ShortenCommand}">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="../../../../Assets/Images/scissors.png" Width="20" Height="20" VerticalAlignment="Center"/>

                            <TextBlock Text="Shorten" Margin="5,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Border>
            </WrapPanel>
        </DockPanel>
    </Border>
</UserControl>
