    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Jarvis Windows;component/Sources/MVVM/Views/Styles/ScrollBarStyle.xaml"/>
        <ResourceDictionary Source="/Jarvis Windows;component/Sources/MVVM/Views/Styles/ColorStyle.xaml"/>
        <ResourceDictionary Source="/Jarvis Windows;component/Sources/MVVM/Views/Styles/SpacingStyle.xaml"/>
