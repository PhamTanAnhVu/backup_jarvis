<ResourceDictionary x:Class="Jarvis_Windows.Sources.MVVM.Views.Styles.JarvisStyle"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Jarvis_Windows.Sources.MVVM.Views.Styles"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Style x:Key="JarvisPrimaryButton" TargetType="Button">
        <Setter Property="Background" Value="#FFFFFF" />
        <Setter Property="Foreground" Value="#1450A3" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="BorderBrush" Value="{x:Null}" />
    </Style>

</ResourceDictionary>
